/* pages/contact/dynamic.wxss */

.serach {
  margin-top: 18rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  background-color: #f3f3f3;
  border-radius: 12rpx;
}

.serach_view_show {
  display: block;
  color: #808080;
  font-size: 18rpx;
  background-color: #F3F3F3;
  border-radius: 12rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx; 
  text-align: center;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 68rpx;
  margin-right: 68rpx;
  margin-top: 13rpx;
  margin-bottom: 13rpx;
  padding: 8rpx;
  background-color: #FFFFFF;
}

.item_left {
  margin-top: 10rpx;
  display: block;
  align-content: center;
}

.item_middle {
  margin-top: 10rpx;
  display: block;
  align-content: center;
}

.item_right {
  margin-top: 10rpx;
  display: block;
  align-content: center;
}

.top_image{
    display: table-column
}

.image{
    width: 88rpx; 
    height: 88rpx;
    border-radius: 44rpx; 
    background-color: #eeeeee;
}

.dynamic_item_mark {
  text-align: center;
}

.dynamic_item_text{
  color: #000000;
  font-family:"微软雅黑";
  font-weight:bold;
  line-height: 10rpx;
  font-size: 22rpx;
}

.sep_line {
  height: 36rpx;
  width: 100%;
  background-color: #F8F9FA;
}

.dynamic_table {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
}

.dynamic_cell {
  padding-left: 32rpx;
  margin-top: 13rpx;
  margin-bottom: 13rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.dynamic_cell_image {
  width: 50rpx;
  height: 50rpx;
}

.text_view {
  display: flex;
  flex: 1;
}

.dynamic_cell_title {
  color: #000000;
  font-family:"微软雅黑";
  font-size:22rpx;
  padding-left: 30rpx;
  margin-top: 10rpx;
}

.cell_image_right {
  width: 50rpx;
  height: 50rpx;
  right: 10rpx;
}

.narrow_line {
  height: 1px;
    width:100%;
    background-color: #E0E1E2;
}